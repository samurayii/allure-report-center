{
    "type": "object",
    "properties": {
        "logger": {
            "type": "object",
            "default": {},
            "properties": {
                "enable": {
                    "type": "boolean",
                    "default": true,
                    "env": "TEMPLATE_LOGGER_ENABLE",
                    "enum": [true, false]
                },
                "timestamp": {
                    "type": "boolean",
                    "default": true,
                    "env": "TEMPLATE_LOGGER_TIMESTAMP",
                    "enum": [true, false]
                },
                "type": {
                    "type": "boolean",
                    "default": true,
                    "env": "TEMPLATE_LOGGER_TYPE",
                    "enum": [true, false]
                },
                "mode": {
                    "type": "string",
                    "default": "prod",
                    "env": "TEMPLATE_LOGGER_MODE",
                    "enum": ["dev", "prod", "debug"]
                }
            },
            "required": [
                "enable",
                "mode",
                "timestamp",
                "type"
            ]
        },
        "authorization": {
            "type": "object",
            "default": {},
            "properties": {
                "users": {
                    "type": "array",
                    "default": [],
                    "env": "TEMPLATE_AUTHORIZATION_USERS",
                    "minItems": 0
                }
            },
            "required": [
                "users"
            ]
        },
        "api": {
            "type": "object",
            "default": {},
            "properties": {
                "enable": {
                    "type": "boolean",
                    "default": false,
                    "env": "TEMPLATE_API_ENABLE",
                    "enum": [true, false]
                },
                "auth": {
                    "type": "boolean",
                    "default": false,
                    "env": "TEMPLATE_API_AUTH",
                    "enum": [true, false]
                },
                "listening": {
                    "type": "string",
                    "default": "*:3001",
                    "minLength": 0,
                    "maxLength": 64,
                    "env": "TEMPLATE_API_LISTENING",
                    "pattern": "^([a-zA-Z]{1}[-a-zA-Z0-9.]{0,255}|[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}|\\*)\\:[0-9]{1,5}$"
                },
                "prefix": {
                    "type": "string",
                    "default": "/api",
                    "minLength": 0,
                    "maxLength": 32,
                    "env": "TEMPLATE_API_PREFIX",
                    "pattern": "^(\/[a-zA-Z]{1}|)[a-zA-Z0-9]{0,31}$"
                },
                "proxy": {
                    "type": "boolean",
                    "default": false,
                    "env": "TEMPLATE_API_PROXY",
                    "enum": [true, false]
                },
                "subdomain_offset": {
                    "type": "integer",
                    "default": 2,
                    "env": "TEMPLATE_API_SUBDOMAIN_OFFSET",
                    "minimum": 0
                },
                "proxy_header": {
                    "type": "string",
                    "default": "X-Forwarded-For",
                    "env": "TEMPLATE_API_PROXY_HEADER",
                    "minLength": 0,
                    "maxLength": 32
                },
                "ips_count": {
                    "type": "integer",
                    "default": 0,
                    "env": "TEMPLATE_API_IPS_COUNT",
                    "minimum": 0
                },
                "env": {
                    "type": "string",
                    "default": "development",
                    "env": "TEMPLATE_API_ENV",
                    "minLength": 0,
                    "maxLength": 32
                },
                "keys": {
                    "type": "array",
                    "env": "TEMPLATE_API_KEYS",
                    "items": {
                        "type": "string",
                        "minLength": 1
                    },
                    "minItems": 1
                }
            },
            "required": [
                "enable",
                "listening",
                "prefix",
                "proxy",
                "subdomain_offset",
                "proxy_header",
                "ips_count",
                "env"
            ]
        }
    },
    "required": [
        "logger",
        "sync",
        "cron",
        "authorization",
        "api"
    ]
}