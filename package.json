{
    "name": "template",
    "version": "0.0.1",
    "description": "Template for nodejs app with typescript",
    "main": "app.js",
    "docker_image": "samuray/app-template",
    "scripts": {
        "up": "ncu && ncu -u && rimraf ./package-lock.json && npm i",
        "ncu": "ncu",
        "pub": "npm run build && npm publish ./dist && rimraf ./dist",
        "build": "rimraf ./dist && npm run lint && tsc && json-key-remover && copy-files-from-to --mode build",
        "start": "node ./dist/app.js --config ./config.toml",
        "start:dev": "node ./src/app.ts --config ./config.toml",
        "start:bundle": "node ./bundle/app.js --config ./config.toml",
        "start:ob": "ts-node ./ob/app.js --config ./config.toml",
        "lint": "eslint \"./src/**/*.{js,ts}\" --quiet --fix && tsc --noEmit",
        "lint:tests": "eslint \"./tests/**/*.{js,ts}\" --quiet --fix",
        "test": "npm run test:unit && npm run test:e2e",
        "test:unit": "mocha -r ts-node/register --config ./tests/mocha.unit.config.json",
        "test:e2e": "start-server-and-test e2e:start-server http://localhost:3001/api/healthcheck e2e:start-tests",
        "e2e:start-server": "ts-node ./src/app.ts --config ./tests/e2e/config.toml",
        "e2e:start-tests": "mocha -r ts-node/register --config ./tests/mocha.e2e.config.json",
        "ob": "rimraf ./ob && npm run ob:app && npm run ob:docker-healthcheck",
        "ob:app": "javascript-obfuscator ./bundle/app.js --target node --compact true --control-flow-flattening true --dead-code-injection true --output ./ob/app.js",
        "ob:docker-healthcheck": "javascript-obfuscator ./bundle/docker-healthcheck.js --target node --compact true --control-flow-flattening true --dead-code-injection true --output ./ob/docker-healthcheck.js",
        "parcel": "rimraf ./bundle && npm run parcel:app && npm run parcel:docker-healthcheck",
        "parcel:app": "parcel build ./dist/app.js --target node --no-minify --no-cache --no-source-maps --out-dir ./bundle",
        "parcel:docker-healthcheck": "parcel build ./dist/docker-healthcheck.js --target node --no-minify --no-cache --no-source-maps --out-dir ./bundle",
        "docker:build": "npm run build && npm run parcel && npm run ob && copy-files-from-to --mode docker:build && ts-node ./docker-build/build.ts",
        "docker:push:version": "ts-node ./docker-build/push_version.ts",
        "docker:push:latest": "ts-node ./docker-build/push_latest.ts",
        "docker:tag": "ts-node ./docker-build/tag.ts",
        "docker": "npm run docker:build && npm run docker:tag && npm run docker:push:version && npm run docker:push:latest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/samurayii/template-project-ts.git"
    },
    "keywords": [
        "templates",
        "typescript"
    ],
    "author": "Nuzhnov A.A.",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/samurayii/template-project-ts/issues"
    },
    "homepage": "https://github.com/samurayii/template-project-ts.git#readme",
    "devDependencies": {
        "@types/chai": "^4.2.12",
        "@types/chai-http": "^4.2.0",
        "@types/chalk": "^2.2.0",
        "@types/find-package-json": "^1.1.1",
        "@types/koa-helmet": "^5.2.0",
        "@types/koa-logger": "^3.1.1",
        "@types/mocha": "^8.0.3",
        "@types/node": "^14.6.0",
        "@typescript-eslint/eslint-plugin": "^3.10.1",
        "@typescript-eslint/parser": "^3.10.1",
        "chai": "^4.2.0",
        "chai-http": "^4.3.0",
        "copy-files-from-to": "^3.1.4",
        "eslint": "^7.7.0",
        "javascript-obfuscator": "^1.11.0",
        "json-key-remover": "^0.0.2",
        "mocha": "^8.1.2",
        "npm-check-updates": "^7.1.1",
        "parcel-bundler": "^1.12.4",
        "rimraf": "^3.0.2",
        "start-server-and-test": "^1.11.3",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.2"
    },
    "dependencies": {
        "ajv": "^6.12.4",
        "axios": "^0.20.0",
        "chalk": "^4.1.0",
        "commander": "^6.0.0",
        "di-ts-decorators": "0.0.3",
        "find-package-json": "^1.2.0",
        "json-from-default-schema": "^0.1.4",
        "jtomler": "^0.0.5",
        "koa-body": "^4.2.0",
        "koa-helmet": "^5.2.0",
        "koa-logger": "^3.2.1",
        "koa-ts-decorators": "0.0.8"
    },
    "remover": {
        "target": "./package.json",
        "destination": "./dist/package.json",
        "remove": [
            "remover",
            "devDependencies",
            "main",
            "scripts",
            "keywords",
            "homepage",
            "bugs",
            "copyFiles",
            "copyFilesSettings"
        ]
    },
    "copyFiles": [
        {
            "from": {
                "build": "./package-lock.json",
                "default": {
                    "skip": true
                }
            },
            "to": {
                "build": "./dist/package-lock.json",
                "default": {
                    "skip": true
                }
            }
        },
        {
            "from": {
                "docker:build": "./ob/app.js",
                "default": {
                    "skip": true
                }
            },
            "to": {
                "docker:build": "./docker-build/app.js",
                "default": {
                    "skip": true
                }
            }
        },
        {
            "from": {
                "docker:build": "./ob/docker-healthcheck.js",
                "default": {
                    "skip": true
                }
            },
            "to": {
                "docker:build": "./docker-build/docker-healthcheck.js",
                "default": {
                    "skip": true
                }
            }
        },
        {
            "from": {
                "docker:build": "./dist/package.json",
                "default": {
                    "skip": true
                }
            },
            "to": {
                "docker:build": "./docker-build/package.json",
                "default": {
                    "skip": true
                }
            }
        },
        {
            "from": {
                "docker:build": "./dist/package-lock.json",
                "default": {
                    "skip": true
                }
            },
            "to": {
                "docker:build": "./docker-build/package-lock.json",
                "default": {
                    "skip": true
                }
            }
        }
    ],
    "copyFilesSettings": {
        "whenFileExists": "overwrite"
    }
}
